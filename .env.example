# Environment Variables for Docker Compose

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=scalable-rest-api

# Backend Configuration
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-environment
JWT_EXPIRE=7d
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000
API_VERSION=v1
API_PREFIX=/api
LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api/v1

# Redis Configuration
REDIS_PASSWORD=redis123

# Security Note:
# In production, generate strong passwords and secrets:
# - Use a strong JWT secret (at least 64 characters)
# - Use complex database passwords
# - Enable SSL/TLS certificates
# - Use environment-specific configuration